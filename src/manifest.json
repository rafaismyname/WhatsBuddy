{
  "manifest_version": 2,

  "name": "WABuddy",
  "description": "WebExtension that adds extra functionalities to WhatsApp Web™️",
  "version": "0.2.3",

  "icons": {
    "512": "./icons/icon.png",
    "256": "./icons/icon-256.png",
    "128": "./icons/icon-128.png",
    "64": "./icons/icon-64.png",
    "48": "./icons/icon-48.png",
    "32": "./icons/icon-32.png"
  },

  "browser_action": {
    "default_icon": {
      "512": "./icons/icon.png",
      "256": "./icons/icon-256.png",
      "128": "./icons/icon-128.png",
      "64": "./icons/icon-64.png",
      "48": "./icons/icon-48.png",
      "32": "./icons/icon-32.png"
    }
  },

  "background": {
    "scripts": ["./background/background.js"],
    "persistent": false
  },

  "options_ui": {
    "page": "./options/options.html",
    "chrome_style": false,
    "open_in_tab": true
  },

  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["./chat/chat.js", "./list/list.js"],
      "css" : ["./chat/chat.scss", "./list/list.scss"]
    }
  ],

  "permissions": ["storage"]
}
